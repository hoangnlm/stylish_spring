<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/configs/*.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <!--     CKFinder     -->
    <servlet>
        <servlet-name>ConnectorServlet</servlet-name>
        <servlet-class>com.ckfinder.connector.ConnectorServlet</servlet-class>
        <init-param>
            <param-name>XMLConfig</param-name>
            <param-value>/WEB-INF/ckfinderconfig.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectorServlet</servlet-name>
        <url-pattern>
            /assets/ckfinder/core/connector/java/connector.java
        </url-pattern>
    </servlet-mapping>
    <!--    UTF-8 Input    -->
    <filter>
        <filter-name>utf8</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>utf8</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>ProductStateLessBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.ProductStateLessBeanLocal</local>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>RolesStateLessBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.RolesStateLessBeanLocal</local>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>UsersStateLessBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.UsersStateLessBeanLocal</local>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>BlogsSB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.BlogsSBLocal</local>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>BlogCategoriesSB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.BlogCategoriesSBLocal</local>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>OrderStateLessBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.OrderStateLessBeanLocal</local>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>OrderStateFulBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.OrderStateFulBeanLocal</local>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>UserAddressesStateLessBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>stylish.ejb.UserAddressesStateLessBeanLocal</local>
    </ejb-local-ref>
</web-app>